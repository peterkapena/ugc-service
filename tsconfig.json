{
    "compilerOptions": {
      "experimentalDecorators": true,
      "rootDirs": ["src"],
      "outDir": "./dist",
      "lib": ["es2021", "esnext.asynciterable"],
      "target": "es2021",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "types": ["node"],
      "emitDecoratorMetadata": true,
      // "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "allowJs": false
    }
  }